<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Taskz" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryDark</item>
        <item name="colorTertiary">@color/tertiaryDark</item>
        <item name="colorSecondary">@color/secondaryDark</item>
        <item name="background">@color/backgroundDark</item>
        <item name="colorOnBackground">@color/rootBackgroundDark</item>
        <item name="colorBackgroundFloating">#05FFFFFF</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/background</item>
        <item name="statusBarForeground">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">?attr/background</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>


    </style>

    <style name="alternativeTextColor" parent="Theme.Material3.DayNight">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="alternativeTintColor" parent="Theme.Material3.DayNight">
        <item name="android:tint">@color/black</item>
    </style>

    <!--    Card Background-->
    <style name="cardBack" parent="Theme.AppCompat">
        <item name="android:backgroundTint">@color/black2</item>
        <item name="android:textColor">@color/whiteTransparent</item>
    </style>

    <!--Night Mode Theme-->
    <style name="nightModeSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/black</item>
        <item name="colorSwitchThumbNormal">@color/grey</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>

    <!--Notification Theme-->
    <style name="notificationSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/yellow</item>
        <item name="colorSwitchThumbNormal">@color/grey</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>

    <!--Private Theme-->
    <style name="privateSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/greenTransparent</item>
        <item name="colorSwitchThumbNormal">@color/grey</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>
</resources>