<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FarmUs" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryLight</item>
        <item name="colorTertiary">@color/tertiaryLight</item>
        <item name="colorSecondary">@color/secondaryLight</item>
        <item name="background">@color/backgroundLight</item>
        <item name="colorOnBackground">@color/rootBackgroundLight</item>
        <item name="colorBackgroundFloating">#0C000000</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="alternativeTextColor" parent="Theme.Material3.DayNight">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="alternativeTintColor" parent="Theme.Material3.DayNight">
        <item name="android:textColor">@color/white</item>
    </style>

    <!--Card Background-->
    <style name="cardBack" parent="Theme.AppCompat">
        <item name="android:backgroundTint">@color/grey2</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--Night Mode Theme-->
    <style name="nightModeSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/outerSpace</item>
        <item name="colorSwitchThumbNormal">@color/grey</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>

    <!--Notification Theme-->
    <style name="notificationSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/yellow</item>
        <item name="colorSwitchThumbNormal">@color/grey</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>

    <!--Private Theme-->
    <style name="privateSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/greenTransparent</item>
        <item name="colorSwitchThumbNormal">@color/grey</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>
</resources>